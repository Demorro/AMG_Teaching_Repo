<?xml version="1.0"?>
<CharacterSpeechConfig Name="SpeechConfig" Visible="true" PhrasesShouldLoop="true">

	<!--These speech nodes have two elements, the first is the text that is displayed when the player comes close to the character, and the second is the local wav file name that is played-->
	<Speech>
		<SpeechText>
		You give those crates 
		a good kick with B 
		they'll break
		</SpeechText>
		<AudioFilePath>Give crates a kick.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		I'd kick them but last
		time I lifted my leg 
		high I worried it 
		wouldn't go down
		</SpeechText>
		<AudioFilePath>Lift the leg.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		Then again, I could just 
		sit on them
		</SpeechText>
		<AudioFilePath>Could just sit on them.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		But they are quite far 
		away. 
		</SpeechText>
		<AudioFilePath>Theyre quite far away.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		And I'm really 
		comfortable here.
		</SpeechText>
		<AudioFilePath>Really comfortable.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		Why don't you go
		break the boxes with B.
		Your ever so kind laddie
		</SpeechText>
		<AudioFilePath>Break boxes with B 2.wav</AudioFilePath>
	</Speech>
	
	<!-- these values define where the speech bubble is placed, just fiddle with em, it's cool playaaaa..... -->
	<SpeechBubbleOriginFromTopLeftX>30</SpeechBubbleOriginFromTopLeftX>
	<SpeechBubbleOriginFromTopLeftY>52</SpeechBubbleOriginFromTopLeftY>

	<ShouldDisplayBubble>true</ShouldDisplayBubble>
	<ShouldWobble>true</ShouldWobble>
	
</CharacterSpeechConfig>

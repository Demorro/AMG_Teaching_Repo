<?xml version="1.0"?>
<CharacterSpeechConfig Name="SpeechConfig" Visible="true" PhrasesShouldLoop="true">

	<!--These speech nodes have two elements, the first is the text that is displayed when the player comes close to the character, and the second is the local wav file name that is played-->
	<Speech>
		<SpeechText>
		Be careful of those 
		mossy platforms, they
		look like they are about
		to fall
		</SpeechText>
		<AudioFilePath>Careful of mossy platforms.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		Cracks in the wood.
		Yepp, that's a health
		hazard.
		</SpeechText>
		<AudioFilePath>Cracks in the wood 1.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		Who makes these things?
		Honestly, someone could
		have an accident.
		</SpeechText>
		<AudioFilePath>Who makes these things_.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		If you fall, 
		shout GERONIMO!
		</SpeechText>
		<AudioFilePath>Geronimo 1.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		Wonder if those platforms
		are actually a portal
		to another world.
		</SpeechText>
		<AudioFilePath>Platform Portal.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		Nope, they are 
		definitely dangerous
		don't stay on them long
		</SpeechText>
		<AudioFilePath>Definitely dangerous.wav</AudioFilePath>
	</Speech>
	
	<!-- these values define where the speech bubble is placed, just fiddle with em, it's cool playaaaa..... -->
	<SpeechBubbleOriginFromTopLeftX>30</SpeechBubbleOriginFromTopLeftX>
	<SpeechBubbleOriginFromTopLeftY>52</SpeechBubbleOriginFromTopLeftY>

	<ShouldDisplayBubble>true</ShouldDisplayBubble>
	<ShouldWobble>true</ShouldWobble>
	
</CharacterSpeechConfig>

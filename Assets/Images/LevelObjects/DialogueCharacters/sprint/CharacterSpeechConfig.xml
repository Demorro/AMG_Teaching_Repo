<?xml version="1.0"?>
<CharacterSpeechConfig Name="SpeechConfig" Visible="true" PhrasesShouldLoop="true">

	<!--These speech nodes have two elements, the first is the text that is displayed when the player comes close to the character, and the second is the local wav file name that is played-->
	<Speech>
		<SpeechText>
		If you hold RB you 
		can run even faster!
		</SpeechText>
		<AudioFilePath>Hold RB to run faster.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		Hold RB to Sprint. 
		You can even jump 
		further too 
		</SpeechText>
		<AudioFilePath>RB to sprint and jump further.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		Combining RB and A 
		will make you jump 
		further than a Gazelle!
		</SpeechText>
		<AudioFilePath>faster than a gazelle.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		GOTTA GO FASTER!
		</SpeechText>
		<AudioFilePath>Gotta got faster 3.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		RUN LAD RUN!
		</SpeechText>
		<AudioFilePath>Run lad run!.wav</AudioFilePath>
	</Speech>
	
	<Speech>
		<SpeechText>
		Wow all this excitement
		has got me worn out. 
		You go on ahead, 
		I'll rest. 
		</SpeechText>
		<AudioFilePath>All this excitement.wav</AudioFilePath>
	</Speech>
	
	<!-- these values define where the speech bubble is placed, just fiddle with em, it's cool playaaaa..... -->
	<SpeechBubbleOriginFromTopLeftX>30</SpeechBubbleOriginFromTopLeftX>
	<SpeechBubbleOriginFromTopLeftY>52</SpeechBubbleOriginFromTopLeftY>

	<ShouldDisplayBubble>true</ShouldDisplayBubble>
	<ShouldWobble>true</ShouldWobble>

</CharacterSpeechConfig>
